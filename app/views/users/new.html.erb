<h1>Signup!</h1>

<%= form_for :user, url: '/users', :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :fname, "First name:", class: "control-label col-sm-2" %>
    <div class="col-md-4">
      <%= f.text_field :first, class: "form-control" %>
    </div>
  </div>
<div class="form-group">
    <%= f.label :last, "Last name:", class: "control-label col-sm-2" %>
    <div class="col-md-4">
      <%= f.text_field :last, class: "form-control" %>
    </div>
  </div> 
  <div class="form-group">
    <%= f.label :email, "Email:", class: "control-label col-sm-2" %>
    <div class="col-md-4">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div> 
  <div class="form-group">
    <%= f.label :password, "Password:", class: "control-label col-sm-2" %>
    <div class="col-md-4">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div> 
  <div class="form-group">
    <%= f.label :password_confirmation, "Password Confirmation:", class: "control-label col-sm-2" %>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div> 
  <%= f.submit "Submit", :class => 'col-sm-2 btn btn-primary'%>

<% end %>